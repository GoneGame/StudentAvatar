<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_item"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="6dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/TextView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#000000"
            android:text="@string/titleText"/>

        <TextView
            android:id="@+id/TextView_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:layout_toEndOf="@+id/TextView_title"
            android:text="@string/subTitleText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/TextView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:textColor="#000000"
            android:layout_below="@+id/TextView_title"
            android:text="@string/timeText"/>

        <TextView
            android:id="@+id/TextView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="25dp"
            android:textColor="#000000"
            android:layout_below="@+id/TextView_time"
            android:text="@string/locationText"/>

        <TextView
            android:id="@+id/TextView_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="25dp"
            android:textColor="#000000"
            android:visibility="gone"
            android:layout_below="@+id/TextView_location"
            android:text="@string/descText"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
