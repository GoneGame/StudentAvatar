<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TextView_OtherServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/otherServicesText"
        style="@style/TextAppearance.AppCompat.Large"/>

    <Button
        android:id="@+id/buttonCanteen"
        android:text="@string/canteenLinkText"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView_OtherServices"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/button_text"
        android:background="@color/button_background"/>

    <Button
        android:id="@+id/buttonLibrary"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCanteen"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/libraryLinkText"
        android:textColor="@color/button_text"
        android:background="@color/button_background"/>

    <Button
        android:id="@+id/buttonMPH"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLibrary"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/mphLinkText"
        android:textColor="@color/button_text"
        android:background="@color/button_background"/>

    <Button
        android:id="@+id/buttonCalculator"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMPH"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="@string/intallmentCalculatorText"
        android:textColor="@color/button_text"
        android:background="@color/button_background"/>

    <Button
        android:id="@+id/buttonFeedback"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMPH"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_feedback_white_24"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/feedbackText"
        android:textColor="@color/button_text"
        android:background="@color/button_success"/>

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCalculator"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_logout_white_24dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="@string/menu_logout"
        android:textColor="@color/button_text"
        android:background="@color/colorPrimary"/>

</RelativeLayout>